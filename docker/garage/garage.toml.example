metadata_dir = "/var/lib/garage/meta"
data_dir = "/var/lib/garage/data"
db_engine = "sqlite"
replication_factor = 1

rpc_bind_addr = "[::]:3901"
rpc_public_addr = "127.0.0.1:3901"
# IMPORTANT: generate a unique secret for your deployment.
rpc_secret = "CHANGE_ME_RPC_SECRET"

[s3_api]
s3_region = "us-east-1"
api_bind_addr = "[::]:3900"

[s3_web]
bind_addr = "[::]:3902"
root_domain = ".web.garage.localhost"
index = "index.html"

[admin]
api_bind_addr = "[::]:3903"
# IMPORTANT: keep this secret. Do not commit your real token.
admin_token = "CHANGE_ME_ADMIN_TOKEN"
